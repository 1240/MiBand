<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:actionBarStyle">@style/ABStyle</item>
    </style>

    <style name="ABStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/ic_settings</item>
    </style>

    <style name="l24o" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
